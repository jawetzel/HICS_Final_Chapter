@model HotelIntegratedComputerSystems.Models.Admin.MaintenanceLog.PackageMaintenanceLogViewModel
@Scripts.Render("~/Scripts/SuggestionTable.js")
@Scripts.Render("~/Scripts/OneFilterPerColumn.js")



@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>MaintenanceLogViewModel</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.MaintenanceLog.Id)
        
        
        
        <div class="form-group">
            @Html.Label("FirstName", "Room", htmlAttributes: new { @class = "control-label col-md-2" })

            <div class="col-md-10">
                <div class="container" style="align-items: baseline">
                    @Html.EditorFor(model => model.MaintenanceLog.BuildingName, new { htmlAttributes = new { @readonly = "readonly" } })
                    @Html.EditorFor(model => model.MaintenanceLog.Floor, new { htmlAttributes = new { @readonly = "readonly" } })
                    @Html.EditorFor(model => model.MaintenanceLog.RoomNumber, new { htmlAttributes = new { @readonly = "readonly" } })
                    @Html.EditorFor(model => model.MaintenanceLog.RoomId, new { htmlAttributes = new { @readonly = "readonly", @class = "hidden"} })
                    <input class="form-control" id="RoomId" type="text" placeholder="Roomid" disabled style="display: none;">
                </div>

                <input class="showSuggestions" type="button" name="ShowRooms" value="Show Rooms" onclick="showTable(RoomsList)" />

                <div id="RoomsList" class="panel panel-primary" style="display: none;">
                    <div class="panel-heading">
                        <h3 class="panel-title">Rooms</h3>
                    </div>
                    <table class="table table-hover table-bordered" id="dev-table">
                        <thead>
                        <tr>
                            <th>
                                <input type="text" id="myInput1" onkeyup="filterFunctionColumn3()" class="form-control" data-action="filter" placeholder="Filter Building"/>
                            </th>
                            <th>
                                <input type="text" id="myInput2" onkeyup="filterFunctionColumn3()" class="form-control" data-action="filter" placeholder="Filter Floor"/>
                            </th>
                            <th>
                                <input type="text" id="myInput3" onkeyup="filterFunctionColumn3()" class="form-control" data-action="filter" placeholder="Filter Room"/>
                            </th>
                            <th>
                            </th>
                        </tr>
                        </thead>
                        <tbody>
                        @foreach (var item in Model.RoomsList)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.BuildingName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FloorNumber)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.RoomNumber)
                                </td>
                                <td style="display: none;">
                                    @Html.DisplayFor(modelItem => item.Id)
                                </td>
                                <td>
                                    <input type="button" value="Select" class="btn btn-default" onclick="forwardTo(this.parentElement.parentElement, RoomsList)"/>
                                </td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>



        <div class="form-group">
            @Html.LabelFor(model => model.MaintenanceLog.Description, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.MaintenanceLog.Description, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MaintenanceLog.Description, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.MaintenanceLog.Date, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.MaintenanceLog.Date, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MaintenanceLog.Date, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.MaintenanceLog.MaintenanceTypeId, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.MaintenanceLog.MaintenanceTypeId, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MaintenanceLog.MaintenanceTypeId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.MaintenanceLog.MaintenanceType, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.MaintenanceLog.MaintenanceType, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MaintenanceLog.MaintenanceType, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
