@model IEnumerable<HotelIntegratedComputerSystems.Models.Admin.EmployeeShiftViewModel>
@Scripts.Render("~/Scripts/FilterByColumns.js")
@{
    ViewBag.Title = "Index";
}

<h2></h2>

<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">Employee Shifts</h3>
    </div>
    <input type="text" id="myInput" onkeyup="filterFunction5Column()" class="form-control" data-action="filter" placeholder="Filter Employee Shifts" />
    <table class="table table-hover" id="dev-table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.EmployeeName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClockIn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClockOut)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CashTakenIn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CashPutInSafe)
            </th>
            <th>
                @Html.ActionLink("Create New", "Create")
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.EmployeeName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ClockIn)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.ClockOut)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CashTakenIn)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CashPutInSafe)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </table>
</div>