@model IEnumerable<HotelIntegratedComputerSystems.Services.Admin.EmployeeTypeViewModel>
@Scripts.Render("~/Scripts/FilterByColumns.js")
@{
    ViewBag.Title = "Index";
}

<h2></h2>


<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">Employee Types</h3>
    </div>
    <input type="text" id="myInput" onkeyup="filterFunction3Column()" class="form-control" data-action="filter" placeholder="Filter Employee Types" />
    <table class="table table-hover" id="dev-table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SecurityRankDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PayRate)
            </th>
            <th>
                @Html.ActionLink("Create New", "Create")
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.SecurityRankDescription)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PayRate)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </table>
</div>